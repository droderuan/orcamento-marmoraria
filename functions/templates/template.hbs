<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Document</title>
  <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500&display=swap" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      outline: 0;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    strong {
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-weight: 500;
    }

    .font-300 {
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-weight: 300;
    }

    .font-400 {
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-weight: 400;
    }

    .font-500 {
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-weight: 500;
    }

    div.container {
      width: 210mm;
      height: 297mm;
      margin: auto;
      padding: 5pt;
    }

    header {
      width: 100%;
      margin-bottom: 15p;
      display: flex;
      height: 100pt;
    }

    header div#logo {
      width: 150pt;
      height: 100%;
      background-color: rgb(129, 129, 129);

      display: flex;
      align-items: center;
      justify-content: center;
    }

    header div#logo span {
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-weight: 500;
      font-size: 48pt;
      color: rgb(100, 100, 100);
    }

    header div#header-container {
      display: flex;
      flex: 1;
      flex-direction: column;
      justify-content: flex-end;
    }

    header div#header-container p {
      margin: 10pt 10pt 0;
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-weight: 300;
      font-size: 10pt;
      color: rgb(100, 100, 100);
    }

    section {
      padding: 10px 15px;
      display: flex;
      flex-direction: column;
    }

    section#client {
      color: #054366;
    }

    section div.header {
      display: flex;
      align-items: center;
      flex-direction: row;
      flex-flow: row;
      width: 100%;
    }

    .divider {
      margin-left: 10pt;
      width: 100%;
      border: 0;
      height: 1px;
      background: #2a2929;
    }

    .dark {
      background: #2a2929;
    }

    section div.content {
      display: flex;
      flex-direction: row;
      justify-content: space-evenly;
    }

    section div.content .label {
      margin-right: 20pt;
      display: flex;
      flex-direction: column;
    }

    section div.content .label span {
      margin-right: 20pt;
      color: rgb(20, 20, 20);
      display: flex;
      flex-direction: column;
    }

    section div.content .label strong {
      max-width: 250pt;
      color: rgb(0, 0, 0);

    }

    section#budget {
      color: #054366;
    }

    div.room {
      width: 100%;
    }

    div.room h3 {
      font-size: 20pt;
      margin: 10pt 0;
      color: rgb(0, 0, 0);
    }

    div.product {
      width: 100%;
    }

    table,
    th,
    td {
      padding: 5pt;
    }

    table.item-table {
      margin-bottom: 15pt;
      width: 100%;
      border-collapse: collapse;
      text-align: left;
    }

    table.item-table thead tr {
      font-weight: 300;
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      background-color: #054366;
      border: 0;
      height: 30pt;
    }

    table.item-table thead th {
      font-weight: 300;
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-size: 14pt;
      color: #d9d9d9;
    }

    table.item-table tbody tr {
      border: 0;
      height: 25pt;
      background-color: #e6e6e6;
    }

    table.item-table tbody td {
      font-weight: 400;
      font-family: 'Heebo', Arial, Helvetica, sans-serif;
      font-size: 16pt;
    }
  </style>
</head>

<body>
  <div class="container">
    <header>
      <div id="logo">
        <Span>Logo</Span>
      </div>
      <div id="header-container">
        <p>Nome da empresa</p>
        <p>telefone 21 99999-9999</p>
        <p>RJ - Rio de Janeiro. Avenida das Américas, 1741. CEP: 25.555-000</p>
      </div>
    </header>

    <section id="client">
      <div class="header">
        <h2 class="font-500">Cliente</h2>
        <hr class="divider">
      </div>
      <div class="content">
        <label class="label">
          <span class="font-300">Nome</span>
          <strong class="font-400">{{budget.client.name}}</strong>
        </label>

        <label class="label">
          <span class="font-300">Telefone</span>
          <strong class="font-400">{{budget.client.phone}}</strong>
        </label>

        <label class="label">
          <span class="font-300">Endereço de entrega</span>
          <strong class="font-400">{{budget.deliveryAddress.street}}</strong>
        </label>

      </div>
    </section>

    <section id="budget">
      <div class="header">
        <h2 class="font-500">Orçamento</h2>
        <hr class="divider dark">
      </div>

      <div class="content">
        <div class="room">
          {{#each budget.rooms}}
            <h3>{{room.name}}</h3>

            <div class="product">
              {{#each room.products}}
                <h3>{{product.name}}</h3>

                <table class="item-table">
                  <thead>
                    <tr>
                      <th>Quantidade</th>
                      <th>Nome</th>
                      <th>Pedra</th>
                      <th>Formato</th>
                      <th>Medidas</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>3x</td>
                      <td>tampão</td>
                      <td>Carrara</td>
                      <td>retangular</td>
                      <td>250x50cm</td>
                    </tr>

                  </tbody>
                </table>

                <table class="item-table">
                  <thead>
                    <tr>
                      <th>Acab. Superfície</th>
                      <th>Acab. Borda</th>
                      <th>Posição</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Flamejado</td>
                      <td>Simples</td>
                      <td>Topo, Esquerda, Direita</td>
                    </tr>

                  </tbody>
                </table>
              {{/each}}
            </div>
          {{/each}}
        </div>
      </div>
    </section>
  </div>
</body>

</html>
